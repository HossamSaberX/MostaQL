DATABASE_URL=sqlite:///./data/mostaql.db
RESEND_API_KEY=re_xxxxxxxxxxxxx
RESEND_FROM_EMAIL=noreply@officerkmostaql.com
BASE_URL=https://yourdomain.com
SECRET_KEY=generate-random-32-chars-use-secrets-token-urlsafe
SCRAPER_INTERVAL_MINUTES=30
SCRAPER_POLL_INTERVAL_MINUTES=2
SCRAPER_QUICK_CHECK_COUNT=5
MOSTAQL_BASE_URL=https://mostaql.com
HTTP_REQUEST_TIMEOUT=10
SMTP_TIMEOUT=30
API_PORT=8000
LOG_ROTATION_SIZE=50 MB
LOG_RETENTION_DAYS=7

# Email Provider: "gmail", "brevo", or "alternate" (round-robin between both)
EMAIL_PROVIDER=gmail
EMAIL_BCC_BATCH_SIZE=0

# Gmail SMTP (no domain needed!)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-password

# Brevo SMTP
BREVO_SMTP_KEY=your-brevo-smtp-key
BREVO_SMTP_LOGIN=your-login@smtp-brevo.com
# Brevo Sender Email (MUST be verified in Brevo dashboard - cannot use SMTP login!)
# Go to Brevo Dashboard → Senders & IP → Add/verify a sender email
BREVO_SENDER_EMAIL=your-verified-email@example.com

MAX_CATEGORIES_PER_USER=10
RATE_LIMIT_PER_HOUR=5
LOG_LEVEL=INFO
ENVIRONMENT=production

